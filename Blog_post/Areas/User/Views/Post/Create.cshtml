@model Blog_post.ViewModels.PostCreateMV

<h1>Create new Post</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Title" class="col-form-label"></label>
                <input asp-for="Title" class="form-control"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="col-form-label"></label>
                <input asp-for="Text" class="form-control" />
                <span asp-validation-for="Text  " class="text-danger"></span>
            </div>
            <br />
            <button class="btn btn-primary" name="submitbtn" value="Save as Draft">Save as Draft</button>
            <button class="btn btn-primary" name="submitbtn" value="Submit to check">Submit to Publish</button>
        </form>
    </div>
</div>