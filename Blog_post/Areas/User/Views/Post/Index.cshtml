@model IEnumerable<Blog_post.Models.Post>

<h1>Your Posts</h1>
<a asp-action="Create" class="btn btn-primary">Create</a>

@foreach(var obj in Model)
{
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">@obj.Title</h1>
            <p class="card-text">@obj.Text</p>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
            <a class="btn btn-primary" asp-action="Details" asp-route-id="@obj.Id">Details</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
        </div>
        <div class="card-footer">@obj.CreatedDate</div>
    </div>
}
